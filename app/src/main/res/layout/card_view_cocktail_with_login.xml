<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_cocktail"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_cocktail_with_login"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/text_cocktail_with_login"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/love_cocktail_card"
            android:layout_width="51dp"
            android:layout_height="54dp"
            android:background="@null"
            android:src="@drawable/ic_heart_black_line_24_dp"
            android:layout_gravity="end"></ImageButton>

    </FrameLayout>



</androidx.cardview.widget.CardView>
