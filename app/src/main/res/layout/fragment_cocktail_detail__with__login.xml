<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white">



        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cocktail_detail_image_with_login"
            >

            <TextView
                android:id="@+id/cocktail_detail_name_with_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                 />

            <ImageButton
                android:id="@+id/love_cocktail_detail"
                android:layout_width="51dp"
                android:layout_height="54dp"
                android:background="@null"
                android:src="@drawable/ic_heart_black_line_24_dp"
                android:layout_gravity="right"></ImageButton>

        </LinearLayout>

        <ImageView
            android:id="@+id/cocktail_detail_image_with_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/cocktail_detail_ingredients_with_login"
            app:layout_constraintBottom_toBottomOf="@+id/layout"/>


        <TextView
            android:id="@+id/cocktail_detail_ingredients_with_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@id/cocktail_detail_image_with_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/cocktail_detail_method_with_login"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/cocktail_detail_method_with_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@id/cocktail_detail_ingredients_with_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>